package com.banking.controller;

import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.http.MediaType;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.PutMapping;
import org.springframework.web.bind.annotation.RequestBody;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RestController;

import com.banking.entity.Transaction;
import com.banking.service.TransactionService;




@RestController
@RequestMapping("/transaction/api.1.0")
public class TransactionController {
	
	@Autowired
	TransactionService service;
	
	@GetMapping
	@RequestMapping("/alltransactions")
	public List<Transaction> showAllProducts(){
		
		return service.getTransactions();
	}
	
	@GetMapping
	@RequestMapping("/transactionid/{id}")
	public Transaction fetchProduct(@PathVariable int id) {
		//return repo.findById(id);
		
		return service.getTransactionById(id);
	}
	
	@PostMapping
	@RequestMapping(consumes=MediaType.APPLICATION_JSON_VALUE,
					produces=MediaType.APPLICATION_JSON_VALUE,
					value="/addinvestor")
	
	public Transaction createInvestor(@RequestBody Transaction transaction) {
		 return service.save(transaction);
	}
	
	@PutMapping
	@RequestMapping(consumes=MediaType.APPLICATION_JSON_VALUE,
					produces=MediaType.APPLICATION_JSON_VALUE,
					value="/modifyinvestor")
	public Transaction updateInvestor(@RequestBody Transaction tran) {
		return service.update(tran);
	}
	

}
